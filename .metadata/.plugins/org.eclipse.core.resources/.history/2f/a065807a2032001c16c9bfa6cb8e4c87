package Bai1;

import java.util.Scanner;
public class RunMain {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Nhap n: ");
		int n = sc.nextInt();
		System.out.println("Nhap m: ");
		int m = sc.nextInt();
		for(int i=0; i<n; i++) {
			for(int j=0; j<m; j++) {
				if(i==0 || i== n-1) 
					System.out.println("* ");
				else if(j==0 || j==n-1) 
					System.out.println("* ");
				else 
					System.out.println("  ");
			}
		}
	}
}
